# vi: ft=sh

super + Return
	$TERMINAL
super + shift+ Return
	samedir
super + o ; {t,j}
    { \
        opentrayer \
        chromium \
    }
super + space
	dmenu_run
super + b
    ox chrome
super + r
	$TERMINAL -e $FILE
super + shift + a
	$TERMINAL -e alsamixer; refbar
super + F11
	dmenuunicode
super + Insert
	showclip
super + shift + Delete
	prompt "Shutdown computer?" "systemoff"
super + shift + BackSpace
	prompt "Reboot computer?" "systemreboot"
super + shift + Escape
	prompt 'Leave Xorg?' 'killall Xorg'
super + x
    i3lock -e -f -c 1d2021
XF86Launch1
	xset dpms force off
XF86TouchpadToggle
	(synclient | grep "TouchpadOff.*1" && synclient TouchpadOff=0)>/dev/null || synclient TouchpadOff=1
XF86TouchpadOff
	synclient TouchpadOff=1
XF86TouchpadOn
	synclient TouchpadOff=0
Print
	maimpick
	# maim pic-full-$(date '+%y%m%d-%H%M-%S').png
shift + Print
    maim | xclip -selection clipboard -t image/png
XF86AudioMute
	amixer sset Master toggle; refbar
XF86Audio{Raise,Lower}Volume
	amixer sset Master 5%{+,-}; refbar
XF86MonBrightness{Up,Down}
    brightness {+,-}10
XF86PowerOff
	prompt "Shutdown computer?" "sudo -A shutdown -h now"
XF86Calculator
	$TERMINAL -e bc
XF86Sleep
	prompt 'Hibernate computer?' 'sudo -A zzz'
XF86WLAN
    sudo -A systemctl restart NetworkManager
XF86TaskPane
	$TERMINAL -e htop
# super + F2 is mapped to restart dwm.
# Change display
super + F3
	displayselect
# Hibernate
super + F4
	prompt 'Hibernate computer?' 'sudo -A zzz'
# toggle torrent daemon
super + F7
	td-togggle
# Mount a USB drive or Android device
super + {F9,F10}
	{dmenumount,dmenuumount}
super + F12
	networkmanager_dmenu
Prior
    nope
Next
    nope
